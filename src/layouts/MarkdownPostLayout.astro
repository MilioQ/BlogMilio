---
import Galeria from '../components/Galeria.astro';
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
import 'photoswipe/style.css';
---
<BaseLayout>
  <h1 class="title mb-3">{frontmatter.title}</h1>
  <p class="mb-3" >{frontmatter.description}</p>
  <div class="mb-3">  <slot /></div>

  
  <p >Escrito por: {frontmatter.author}</p>
  <p class="mb-3" style="font-weight: bold;"><em>{frontmatter.pubDate.toString().slice(0,10)}</em></p>

  


  <iframe src={frontmatter.location} width="auto" height="auto" style="border:0;" allowfullscreen="" loading="eager" referrerpolicy="no-referrer-when-downgrade"></iframe>

<h2 style="padding-top: 10px; padding-bottom: 10px;">Galeria</h2>

<div class="grid grid-cols-3 masx-w-6xl gap-8 mx-auto py-5" id="gallery">
  {frontmatter.images.map((imagen) => (
      <a 
        class="group hover:scale-105 transition-all relative"
        href={imagen}
        data-pswp-width="3000" 
        data-pswp-height="2000" 
        target="_blank"
        >
        <img src={imagen} width="200" height="100" alt="" class="rounded-sm shadow-2xl hover:shadow-black-100/75"/>
      </a>
  ))}


</div>



  <h3>Tags:</h3>
  <div class="tags" style="padding-top: 10px;">
    {frontmatter.tags.map((tag) => (
      <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
    ))}
  </div>

</BaseLayout>
<style>
  a {
    color: #500000;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
  
</style>


<script>
  import PhotoSwipeLightbox from 'photoswipe/lightbox';

   const lightbox = new PhotoSwipeLightbox({
     gallery: '#gallery',
     children: 'a',
     pswpModule: () => import('photoswipe')
   });
   lightbox.init();
   </script>
